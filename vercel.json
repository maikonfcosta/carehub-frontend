{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://carehub-api.onrender.com/api/:path*"
    },
    
    // Regra principal de Fallback (captura a maioria dos caminhos sem barra no final)
    {
      "source": "/:path((?!static/|assets/|favicon.ico).*)",
      "destination": "/index.html"
    },
    
    // ðŸš¨ REGRA EXTRA PARA GARANTIR CAMINHOS COM BARRA FINAL ðŸš¨
    {
      "source": "/:path*/",
      "destination": "/index.html"
    }
  ]
}